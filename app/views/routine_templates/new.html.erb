<div class="modal-div">
  <div class="new-routine-template-container second">
    <% @exercises.reverse.each do |exercise| %>
      <div class="item">

        <div class="exercise-index-preview">
          <%= exercise.name %>
        </div>

          <div class="item-description">
            <%= exercise.description %>
          </div>

      </div>
    <% end %>
  </div>
</div>

<div class="heading-div">
  <div class="page-title">
    CREATE A ROUTINE
  </div>


</div>

<div class="new-routine-template-container-div">
  <div class="new-routine-template-container first">
    <div class="new-routine-template-form">
      <%= simple_form_for @routine_template do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <div class="submit-button-div"><%= f.button :submit, "Create routine", class: "primary-button wide" %></div>
      <% end %>
    </div>
  </div>

  <div class="new-routine-template-container second">

  </div>
</div>
